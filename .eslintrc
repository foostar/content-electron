{
    "parser": "babel-eslint",
    "extends": ["standard", "standard-react"],
    "globals": {
        "FormData": true,
        "fetch": true,
        "localStorage": true
    },
    "rules": {
        "indent": ["error", 4],
        "no-class-assign": 0,
        "object-curly-spacing": ["error", "never"],
        "semi": ["error", "always"],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "eqeqeq": 0,
        "react/prop-types": "off"
    }
}
