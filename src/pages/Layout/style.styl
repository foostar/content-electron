.container
    height 100vh
    position relative
    display flex
    overflow hidden

.menu
    width 240px
    height 100%
    overflow-x hidden
    overflow-y auto

.content
    flex 1
    position relative
    overflow hidden

.inner
    position relative
    width 100%
    height 100%
    overflow-x hidden
    overflow-y auto

:global
    body
        -webkit-user-select none
    .change-route-enter
        opacity 0
        transform translate3d(-36px,0,0)
    .change-route-enter.change-route-enter-active
        opacity 1
        transform translate3d(0,0,0)
        transition 300ms

    .change-route-leave
        opacity 1
        transform translate3d(0,0,0)
    .change-route-leave.change-route-leave-active
        opacity 0
        transform translate3d(36px,0,0)
        transition 300ms
