.text-num
    position absolute
    right 5px
    top 5px
    margin 0

.disappear
    display none
.goback
    margin-left 30px
.upload
    position relative
    top 2px
    left 8px

.inner
    width 80%
    max-width 900px
    padding 0 10px
    margin auto
    :global
        .ant-form-item:nth-child(3)
            margin-bottom 0
        .fr-box.fr-basic .fr-element
            min-height 400px !important

.layout
    height 100%
.content
    overflow auto
    border-bottom 1px solid #eee
    padding-top 24px
.footer
    height 60px
    padding 0
    box-shadow 0 0 1px #CCC
    justify-content center
    align-items center
    display flex
    :global
        .ant-btn
            margin 0 5px
