.create-modal
    top 10px
    height calc(100% - 20px)
    margin 0 10px
    padding-bottom 0
    overflow hidden
    :global
        .ant-modal-content
            height 100%
            display flex
            flex-direction column
        .ant-modal-body
            flex 1
            display flex
            flex-direction column

.steps-content
    flex 1
    overflow auto
    padding-top 12px

.platform-card
    margin-bottom 8px
    cursor pointer
    .logo
        height 60px
        background-position center
        background-size contain
        background-repeat no-repeat

.account-form-wrapper
    display flex
    height 100%
    justify-content center
    align-items center

.account-form
    width 300px
    button
        width 100%

.create-done
    :global
        .ant-collapse-content
            padding 0
        .ant-collapse-content-box
            padding 0
        .ant-table
            border 0
            table
                padding 0
        .ant-table-placeholder
            border-bottom 0
    button
        width 300px
        display block
        margin auto