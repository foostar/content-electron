.create-modal
    top 10px
    height calc(100% - 20px)
    margin 0 10px
    padding-bottom 0
    overflow hidden
    :global
        .ant-modal-content
            height 100%
            display flex
            flex-direction column
        .ant-modal-body
            flex 1
            display flex
            flex-direction column
.steps
    max-width 680px
    margin 0 auto

.steps-content
    flex 1
    overflow auto
    padding-top 30px

.platforms
    display flex
    width 600px
    margin 0 auto
    flex-wrap wrap
.platform-card
    margin 10px
    cursor pointer
    width 100px
    height 100px
    .logo
        height 50px
        width 50px
        margin 0 auto
        background-position center
        background-size contain
        background-repeat no-repeat
    .platform-name
        text-align center
        margin-top 10px
        line-height 20px
    :global
        .ant-card-body
            padding 10px
.platform-disabled
    filter grayscale(100%)
    cursor default
.platform-disabled:hover
    box-shadow none
    border-color #e9e9e9

.account-form-wrapper
    display flex
    // height 100%
    justify-content center
    align-items center
.header
    background none
.sider
    background none
    text-align right
    padding 50px 30px
    border-right 1px solid #EEE
    height 160px
    img
        width 60px
        height 60px
.content-container
    max-width 600px
    margin 0 auto
.content
    padding 10px 20px
    width 350px
    max-width 350px
.account-form
    width 100%

.create-done
    :global
        .ant-collapse-content
            padding 0
        .ant-collapse-content-box
            padding 0
        .ant-table
            border 0
            table
                padding 0
        .ant-table-placeholder
            border-bottom 0
    button
        width 300px
        display block
        margin auto
.webview-wrap 
    height 100%