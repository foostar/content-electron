.publish-modal
    top 10px
    height calc(100% - 20px)
    margin 0 10px
    padding-bottom 0
    overflow hidden
    :global
        .ant-modal-content
            height 100%
            display flex
            flex-direction column
        .ant-modal-body
            flex 1
            display flex
            flex-direction column
            overflow auto

.platform-card
    margin-bottom 8px
    cursor pointer
    .logo
        height 60px
        background-position center
        background-size contain
        background-repeat no-repeat

.bind-tag
    position absolute
    top -1px
    right -1px
    margin 0

.steps-content
    flex 1
    overflow auto
    padding-top 12px