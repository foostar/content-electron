.publish-modal
    top 10px
    height calc(100% - 20px)
    margin 0 10px
    padding-bottom 0
    overflow hidden
    :global
        .ant-modal-content
            height 100%
            display flex
            flex-direction column
        .ant-modal-body
            flex 1
            display flex
            flex-direction column
            overflow auto

.platform-card
    margin-bottom 8px
    cursor pointer
    line-height 40px
    .logo
        height 40px
        background-position left center
        padding-left 50px
        background-size contain
        background-repeat no-repeat
    :global
        .ant-card-body
            padding 2px

.bind-tag
    position absolute
    top -1px
    right -1px
    margin 0

.upstream-tag
    position absolute
    bottom -1px
    left -1px
    margin 0

.steps
    max-width 680px
    margin 0 auto
.steps-content
    flex 1
    overflow auto
    padding-top 12px
.webview-wrap 
    height 100%