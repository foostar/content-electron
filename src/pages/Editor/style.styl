.text-num
    position absolute
    right 5px
    top 5px
    margin 0
.form
    height 100%
.disappear
    display none
.goback
    margin-left 30px
.upload
    position absolute
    top 40px
    left 180px
    z-index 100


.inner
    width 80%
    max-width 900px
    padding 0 10px
    margin auto
    :global
        .fr-box.fr-basic .fr-element
            min-height 400px !important

@media (max-width 990px)
    .upload
        top 3px
        left 425px

.layout
    height 100%
.content
    overflow auto
    border-bottom 1px solid #eee
    padding-top 24px
.footer
    height 60px
    padding 0
    box-shadow 0 0 1px #CCC
    justify-content center
    align-items center
    display flex
    :global
        .ant-btn
            margin 0 5px
