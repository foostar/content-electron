.publish-modal
    top 10px
    height calc(100% - 20px)
    margin 0 10px
    padding-bottom 0
    overflow hidden
    :global
        .ant-modal-content
            height 100%
            display flex
            flex-direction column
        .ant-modal-body
            flex 1
            display flex
            flex-direction column
            overflow auto

.platform-card
    margin-bottom 8px
    cursor pointer
    width 100px
    height 100px
    float left
    margin 10px
    :global
        .ant-card-body
            padding 10px
    .logo
        width 50px
        height 50px
        margin 0 auto
        background-position center
        background-size contain
        background-repeat no-repeat
    .upstream-name
        text-align center
        margin-top 10px
        line-height 20px

.bind-tag
    position absolute
    top -1px
    right -1px
    margin 0

.upstream-tag
    position absolute
    bottom -1px
    left -1px
    margin 0

.steps-content
    flex 1
    overflow auto
    padding-top 12px
.webview-wrap
    height 100%